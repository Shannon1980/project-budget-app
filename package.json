{
  "name": "budget-management-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.542.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "setup-db": "node src/database/setup.js",
    "verify-db": "node src/database/verify.js",
    "test-db": "node src/database/test-connection.js",
    "build": "react-scripts build",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:utils": "react-scripts test --testPathPattern=utils --watchAll=false",
    "test:hooks": "react-scripts test --testPathPattern=hooks --watchAll=false",
    "test:components": "react-scripts test --testPathPattern=components --watchAll=false",
    "test:pipeline": "./scripts/test-pipeline.sh",
    "lint": "eslint src/ --ext .js,.jsx",
    "lint:fix": "eslint src/ --ext .js,.jsx --fix",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "autoprefixer": "^10.4.14",
    "babel-jest": "^30.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest-environment-jsdom": "^30.1.1",
    "postcss": "^8.4.24",
    "serve": "^14.2.4",
    "tailwindcss": "^3.3.2"
  }
}
